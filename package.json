{
  "name": "chitchatjs",
  "version": "0.0.1",
  "description": "Monorepo for ChitchatJS.",
  "main": "index.js",
  "scripts": {
    "clean": "npx lerna run clean",
    "build": "npx lerna run build --scope={@chitchatjs/core,@chitchatjs/alexa,@chitchatjs/cli}",
    "build:watch": "npx lerna run build:watch",
    "commit": "cz",
    "diff": "npx lerna diff",
    "test": "npx lerna exec npm run test --parallel",
    "coverage": "npx lerna run coverage --stream",
    "lerna-version": "npx lerna version --conventional-commits --yes",
    "publish": "npx lerna run publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevindra/chitchatjs.git"
  },
  "keywords": [],
  "author": "Kevindra Singh (@kevindra)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kevindra/chitchatjs/issues"
  },
  "homepage": "https://github.com/kevindra/chitchatjs#readme",
  "devDependencies": {
    "@types/chai": "^4.2.13",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.2",
    "chai": "^4.2.0",
    "codecov": "^3.8.0",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "lerna": "^3.22.1",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {}
}
